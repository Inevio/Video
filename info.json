
{

    "name"    : "Video Player",
    "version" : "1.0",
    "stage"   : "beta",
    "api"     : "a100d2",

    "language" : {

        "default" : "en-en",
        "list"    : [ "en-en" ]

    },

    "device" : {

        "desktop" : {

            "primary" : "main",
            "service" : [],
            "unique"  : true,
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {
                    
                    "template" : "main.html",

                    "maxizable" : true,
                    "resizable" : true,

                    "width"  : {

                        "default" : 620,
                        "min"     : 590,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 460,
                        "min"     : 332,
                        "max"     : 0

                    },

                    "css"    : ["style.css"],
                    "script" : ["script.js"],
                    "start"  : ["start.js"]

                }

            }

        },

        "mobile" : {

            "primary" : "main",
            "service" : [],
            "unique"  : true,
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {
                    
                    "template"    : "mainMobile.html",
                    "orientation" : "landscape",
                    "css"         : ["mobile/style.css"],
                    "script"      : ["mobile/script.js"],
                    "start"       : []

                }

            }

        }

    },

    "permission" : {

        "fs" : {

            "read" : true

        }
        
    }

}
